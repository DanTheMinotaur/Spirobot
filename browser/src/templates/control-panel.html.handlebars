            <div class="content">
                <table class="table is-fullwidth is-striped" id="events-table">
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</aside>
<aside class="box" id="image-panel">
    <div class="card events-card">
        <header class="card-header">
            <p class="card-header-title">Images</p>
        </header>
        <div class="card-table">
            <div class="content">
                <div class="list" id="image-list"></div>
            </div>
        </div>
    </div>
</aside>