<article id="control-panel">
    <div class="columns">
        <div class="column is-12">
            <section class="info-tiles">
                <div class="tile is-ancestor has-text-centered">
                    <div class="tile is-parent">
                        <article class="tile is-child box pink">
                            <p class="title">Video</p>
                            <label class="switch">
                                <input type="checkbox" id="video-switch">
                                <span class="slider round"></span>
                            </label>
                        </article>
                    </div>
                    <div class="tile is-parent">
                        <article class="tile is-child box yellow">
                            <p class="title">Picture</p>
                            <a class="button is-large" id="camera-button">
                                <span class="icon is-large">
                                  <i class="fa fa-camera" aria-hidden="true"></i>
                                </span>
                            </a>
                        </article>
                    </div>
                    <div class="tile is-parent">
                        <article class="tile is-child box light-blue">
                            <p class="title">Status</p>
                            <div id="status-update">
                                <p class="subtitle">Pinging...</p>
                            </div>
                        </article>
                    </div>
                    <div class="tile is-parent">
                        <article class="tile is-child box red">
                            <p class="title">Mode</p>
                            <div class="select">
                                <select id="mode-select">
                                    <option value="0">Do nothing</option>
                                    <option value="true">Auto</option>
                                    <option value="false">Manual</option>
                                </select>
                            </div>
                        </article>
                    </div>
                </div>
            </section>
            <section class="info-tiles">
                <div class="tile is-ancestor has-text-centered">
                    <div class="tile is-parent" id="video-container">
                        <article class="tile is-child box">
                            <iframe id="live-stream-frame" width="640" height="360" src="https://www.youtube.com/embed/GAtSt9SVc-0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
<!--                            <embed id="live-stream-frame" src="https://www.youtube.com/embed/82vNwi8VA40" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>-->
<!--                            &lt;!&ndash;<iframe id="live-stream-frame" width="560" height="349"  src="https://www.youtube.com/embed/live_stream?channel=UC5TaG-84yWqkwYU1NA1x5JQ" frameborder="0" allowfullscreen></iframe>&ndash;&gt;-->
                        </article>
                    </div>
                    <div class="tile is-parent is-3" id="controls-container">
                        <article class="tile is-child box blue">
                            <div id="joystick">
                                <div class="columns is-mobile is-centered is-gapless">
                                    <div class="column is-three-fifths"><i class="fa fa-caret-up"></i></div>
                                </div>
                                <div class="columns is-mobile is-centered is-gapless">
                                    <div class="column is-one-fifth"><i class="fa fa-caret-left"></i></div>
                                    <div class="column is-three-fifths">
                                        <div id="joystick-control"></div>
                                    </div>

                                    <div class="column is-one-fifth"><i class="fa fa-caret-right"></i></div>
                                </div>
                                <div class="columns is-mobile is-centered is-gapless">
                                    <div class="column is-three-fifths"><i class="fa fa-caret-down"></i></div>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            </section>
        </div>
    </div>
</article>
